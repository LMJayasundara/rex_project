{
  "name": "electron-flask",
  "version": "1.2.0",
  "description": "",
  "main": "renderer.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "package": "node package_python.js && npm run -s package-electron",
    "package-electron": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.electron-flask.my-app",
    "productName": "ElectronFlask",
    "asar": false,
    "asarUnpack": [
      "**/*.node"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "renderer.js",
      "icon.png",
      "value.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist-python/",
        "to": "app/dist-python",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-prompt": "^1.7.0",
    "electron-unhandled": "^4.0.1",
    "find-process": "^1.4.7",
    "fs-extra": "^10.1.0",
    "jsmodbus": "^4.0.6",
    "matrix-js": "^1.6.1",
    "ps-tree": "^1.2.0",
    "serialport": "^10.4.0"
  },
  "devDependencies": {
    "electron": "^13.6.0",
    "electron-builder": "^22.11.7"
  }
}
